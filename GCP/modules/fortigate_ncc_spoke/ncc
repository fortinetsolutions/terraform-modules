config sys glo
    set hostname ${hostname}
    set admintimeout 60
end
config system admin
    edit "admin"
        set password ${fgt_password}
    next
end
config system sdn-connector
    edit "gcp"
        set type gcp
        set ha-status enable
    next
end
# Automation Stitch
config system automation-action
    edit "gcp-ncc-cloud-function"
        set action-type google-cloud-function
        # delay - only available for BOYL Image, it is added into the automation-stitch block for PAYG
        set delay 30
        set uri "${ncc_cloud_function}"
    next
end
# Automation Triggered on License Valid Status Event
config system automation-trigger
    edit "gcp-ncc-trigger"
        set event-type event-log
        set logid 22804
    next
end
# Below config for BOYL image
config system automation-stitch
    edit "gcp-ncc-stitch"
        set trigger "gcp-ncc-trigger"
        set action "gcp-ncc-cloud-function"
    next
end
